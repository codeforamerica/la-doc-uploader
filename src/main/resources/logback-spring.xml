<!--      <timestampFormat>yyyy-MM-dd' 'HH:mm:ss.SSS</timestampFormat>-->
<!--    </layout>-->
<!--  </appender>-->

  <springProfile name="dev | test">
    <root level="INFO">
      <appender-ref ref="JsonConsole"/>
    </root>
  </springProfile>

  <springProfile name="staging | demo | production">
    <root level="INFO">
      <appender-ref ref="JsonConsole"/>
    </root>
  </springProfile>
</configuration>
